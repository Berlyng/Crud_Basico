@using CRUD_Basico.web.Models.Entities
@model E_Empleados
@*
*@
@{
}

<div class="row">
	<div class="col-sm-8 offset-sm2">
		<h2>Nuevo Empleado</h2>
		<form>
			<div class="mb-3">
				<label>Nombre</label>
				<input class="form-control" asp-for="Nombre" type="text"/>
			</div>
			<div class="mb-3">
				<label>Edad</label>
				<input class="form-control" asp-for="Edad" type="number" />
			</div>
			<div class="mb-3">
				<label>Direccion</label>
				<input class="form-control" asp-for="Direccion" type="text" />
			</div>
			<div class="mb-3">
				<label>Posicion</label>
				<input class="form-control" asp-for="Posicion" type="text" />
			</div>
			<div class="mb-3">
				<label>Sueldo</label>
				<input class="form-control" asp-for="Sueldo" type="number" />
			</div>
			<div class="mb-3">
				<input class="form-check" asp-for="Activo" type="checkbox" id="chkActive"/>
				<label class="form-check-label" for="chkActive">Activo</label>
				
			</div>
			<div class="mb-3">
				<button class="btn btn-primary" type="submit">Guardar</button>
				<a asp-controller="Empleado" asp-action="Index" class="btn btn-warning">Volver</a>
			</div>
		
		</form>
	
	</div>
</div>
