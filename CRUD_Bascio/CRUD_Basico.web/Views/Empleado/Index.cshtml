@using CRUD_Basico.web.Models.Entities
@model List<E_Empleados>
@{
	ViewData["Title"] = "Empleado";
}

<div class="row">
	<div class="col-sm-8 offset-sm2">
		<h2 class="display-6">Lista de empleados</h2>
		<a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>
		<table class="table table-bordered">
			<thead class="table-dark">
				<th scope="col">Id</th>
				<th scope="col">Nombre</th>
				<th scope="col">Edad</th>
				<th scope="col">Direccion</th>
				<th scope="col">Posicion</th>
				<th scope="col">Sueldo</th>
				<th scope="col">Activo</th>
			</thead>
			@foreach (var item in Model)
			{
				<tbody>

					<th scope="col">@item.Id</th>
					<th scope="col">@item.Nombre</th>
					<th scope="col">@item.Edad</th>
					<th scope="col">@item.Direccion</th>
					<th scope="col">@item.Posicion</th>
					<th scope="col">@item.Sueldo</th>
					<th scope="col">@(item.Activo ? "Si" : "No")</th>

				</tbody>

			}
		</table>
	</div>
</div>

